<Window x:Class="GA_Stephanie_Lopez_RTB.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GA_Stephanie_Lopez_RTB"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Canvas>
        <RichTextBox Height="283" Width="279" Canvas.Left="490" Canvas.Top="29">
            <FlowDocument>
                <Paragraph>
                    <Run x:Name="rtbDisplay"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <TextBox x:Name="txtDisplayMessage" Canvas.Left="114" TextWrapping="Wrap" Canvas.Top="45" Width="120"/>
        <Label Content="Label" Canvas.Left="54" Canvas.Top="41"/>
        <Button Content="Display Message" Canvas.Left="261" Canvas.Top="45" Height="22" Width="126" x:Name="btnDisplayMessage" Click="btnDisplayMessage_Click"/>


    </Canvas>
</Window>
